<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/orange"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/Nav_Levels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:id="@+id/TyHeaderLevelBike"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:gravity="top">
                
                <TextView
                    android:id="@+id/tvNumberBike"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:text="@string/level"
                    android:textAlignment="textEnd"
                    android:background="@color/salmon"
                    android:textSize="12sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:translationZ="10dp"/>
                
                <ImageView
                    android:id="@+id/ivSportBike"
                    android:layout_width="117dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/gray"
                    android:src="@drawable/baseline_electric_bike_24"/>

                <TextView
                    android:id="@+id/TvTotalTimeBike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="90dp"
                    android:gravity="bottom"
                    android:textSize="10sp"
                    android:text="Hola"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDataLevelBike"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/levelBike"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardCornerRadius="55dp"
                    android:background="@color/white"
                    android:layout_margin="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DISTANCE"
                            android:textAlignment="center"
                            android:layout_marginTop="15dp"
                            android:textSize="10sp"/>
                        <TextView
                            android:id="@+id/TvTotalRunBikePercentage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="30%"
                            android:textAlignment="center"
                            android:textSize="25sp"/>
                        <TextView
                            android:id="@+id/TvTotalRunBike"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5/10"
                            android:textAlignment="center"
                            android:textSize="15sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="RUNS"
                            android:textAlignment="center"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:id="@+id/TyHeaderLevelRollerSkates"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:gravity="top">

                <TextView
                    android:id="@+id/tvNumberRollerSkates"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:text="@string/level"
                    android:textAlignment="textEnd"
                    android:background="@color/salmon"
                    android:textSize="12sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:translationZ="10dp"/>

                <ImageView
                    android:id="@+id/ivSportRollerSkates"
                    android:layout_width="117dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="22dp"
                    android:background="@color/gray"
                    android:src="@drawable/baseline_roller_skating_24"/>

                <TextView
                    android:id="@+id/TvTotalTimeRollerSkates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="92dp"
                    android:gravity="bottom"
                    android:textSize="10sp"
                    android:text="Hola"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDataLevelRollerSkates"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/levelRollerSkates"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardCornerRadius="55dp"
                    android:background="@color/white"
                    android:layout_margin="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DISTANCE"
                            android:textAlignment="center"
                            android:layout_marginTop="15dp"
                            android:textSize="10sp"/>
                        <TextView
                            android:id="@+id/TvTotalRunRollerSkatesPercentage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="30%"
                            android:textAlignment="center"
                            android:textSize="25sp"/>
                        <TextView
                            android:id="@+id/TvTotalRunRollerSkates"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5/10"
                            android:textAlignment="center"
                            android:textSize="15sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="RUNS"
                            android:textAlignment="center"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp">

            <RelativeLayout
                android:id="@+id/TyHeaderLevelShoes"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:gravity="top">

                <TextView
                    android:id="@+id/tvNumberShoes"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:text="@string/level"
                    android:textAlignment="textEnd"
                    android:background="@color/salmon"
                    android:textSize="12sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingRight="10dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:translationZ="10dp"/>

                <ImageView
                    android:id="@+id/ivSportShoes"
                    android:layout_width="117dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="22dp"
                    android:background="@color/gray"
                    android:src="@drawable/baseline_transfer_within_a_station_24"/>

                <TextView
                    android:id="@+id/TvTotalTimeShoes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="92dp"
                    android:gravity="bottom"
                    android:textSize="10sp"
                    android:text="Hola"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDataLevelShoes"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/levelShoes"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardCornerRadius="55dp"
                    android:background="@color/white"
                    android:layout_margin="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DISTANCE"
                            android:textAlignment="center"
                            android:layout_marginTop="15dp"
                            android:textSize="10sp"/>
                        <TextView
                            android:id="@+id/TvTotalRunShoesPercentage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="30%"
                            android:textAlignment="center"
                            android:textSize="25sp"/>
                        <TextView
                            android:id="@+id/TvTotalRunShoes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5/10"
                            android:textAlignment="center"
                            android:textSize="15sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="RUNS"
                            android:textAlignment="center"
                            android:textSize="10sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/tvUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="user"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tPhrase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text="frase motivadora"
        android:textColor="@color/gray"/>



</LinearLayout>